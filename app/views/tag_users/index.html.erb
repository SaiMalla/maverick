<p id="notice"><%= notice %></p>

<h1>Tag Users</h1>

<table>
  <thead>
    <tr>
      <th>Ticket</th>
      <th>Employee</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tag_users.each do |tag_user| %>
      <tr>
        <td><%= tag_user.ticket %></td>
        <td><%= tag_user.employee %></td>
        <td><%= link_to 'Show', tag_user %></td>
        <td><%= link_to 'Edit', edit_tag_user_path(tag_user) %></td>
        <td><%= link_to 'Destroy', tag_user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Tag User', new_tag_user_path %>
